name:                Sim
version:             0.1.0.0
synopsis:            A simple pencil game
homepage:            https://github.com/vikraman/Sim
license:             GPL-3
license-file:        LICENSE
category:            Game
build-type:          Simple
cabal-version:       >=1.8
data-files:          sim.glade

executable sim
  hs-source-dirs: src
  main-is: Main.hs
  build-depends: base == 4.*
               , text
               , mtl
               , gtk
               , cairo
               , reactive-banana == 0.7.*
               , reactive-banana-gtk == 0.0.2

test-suite sim-tests
  type: exitcode-stdio-1.0
  hs-source-dirs: src
  main-is: Tests.hs
  build-depends: base == 4.*
               , HUnit
               , text
               , mtl
               , gtk
               , cairo
